<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.CryptoDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_shape"
        android:padding="20dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageOfCrypto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/percentChange1h"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageOfCrypto"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/imageOfCrypto" />

        <TextView
            android:id="@+id/percentChange24h"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/imageOfCrypto" />

        <TextView
            android:id="@+id/dateAdded"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:layout_toEndOf="@id/imageOfCrypto" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>